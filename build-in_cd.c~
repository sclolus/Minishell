#include "minishell.h"

int32_t	ft_cd(char **argv) // flags ?
{
	static	char oldpwd[PATH_MAX] = "";

	if (!ft_strcmp("-", argv[1]))
	{
		ft_putstr(oldpwd);
		if (chdir(oldpwd) == -1)
		{
			ft_putendl_fd("ERROR FT_CD", 2);
		}
		ft_strclean(oldpwd);
		ft_strcpy(oldpwd, argv[1]);
	}
	else
	{
		if (chdir(argv[1]) == -1)
		{
			ft_putendl_fd("ERROR FT_CD", 2);
		}
	}
}
